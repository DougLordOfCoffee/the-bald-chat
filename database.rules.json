{
  "rules": {
    "channels": {
      ".read": true,
      ".write": true,
      ".indexOn": ["timestamp"]
    },

    "messages": {
      "$channelId": {
        "$messageId": {
          ".read": true,
          ".write": "
            (!data.exists() && newData.exists()) ||
            (data.exists() && auth != null && auth.uid === 'shELHHG7NJPJqQ0aRb7NR3sPhpJ3')
          ",
          ".indexOn": ["timestamp"]
        }
      }
    },

    "users": {
      "$uid": {
        ".read": true,
        ".write": true
      }
    },

    "usernames": {
      ".read": true,
      ".write": true
    }
  }
}
